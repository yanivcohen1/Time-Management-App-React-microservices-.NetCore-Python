{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "${workspaceFolder}/backend_python_service/tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestArgs": [
        "backend_python_service/tests"
    ],
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/backend_python_service/venv/Scripts/python.exe",

    "vitest.commandLine": "pnpm run test:watch",
    "vitest.configPath": "${workspaceFolder}/frontend/vitest.config.ts",
    "vitest.workingDirectory": "${workspaceFolder}/frontend",
    "jest.enable": false
}