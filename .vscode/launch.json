    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome localhost:3001 with dev task",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "dev",
            "url": "http://localhost:3001", 
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "Launch Chrome localhost:3001 without dev task",
            "type": "chrome",
            "request": "launch",
            // "preLaunchTask": "dev",
            "url": "http://localhost:3001", 
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "C#: AuthApi Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/backend_netCore_service/AuthApi/AuthApi.csproj"
        },
        {
            "name": "FastAPI: Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "5000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend_python_service",
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
}