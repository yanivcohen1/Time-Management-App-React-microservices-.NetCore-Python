    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",// first you need "pnpm dev" in cmd
            "url": "http://localhost:3001", 
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "C#: AuthApi Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/backend/AuthApi/AuthApi.csproj"
        }
    ]
}